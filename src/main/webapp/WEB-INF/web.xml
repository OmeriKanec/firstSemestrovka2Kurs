<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.semestr.firstsemestrovka2kurs.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>com.semestr.firstsemestrovka2kurs.servlets.SignUpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userpage</servlet-name>
        <servlet-class>com.semestr.firstsemestrovka2kurs.servlets.UserPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userpage</servlet-name>
        <url-pattern>/loggedin/userpage</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.semestr.firstsemestrovka2kurs.servlets.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/loggedin/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>userlist</servlet-name>
        <servlet-class>com.semestr.firstsemestrovka2kurs.servlets.UserListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userlist</servlet-name>
        <url-pattern>/loggedin/userlist</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>loggedInFilter</filter-name>
        <filter-class>com.semestr.firstsemestrovka2kurs.servlets.LoggedInFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loggedInFilter</filter-name>
        <url-pattern>/loggedin/*</url-pattern>
    </filter-mapping>

</web-app>